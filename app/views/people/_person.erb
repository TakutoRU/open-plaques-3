<div class="col-xs-4 vcard clearfix">
  <%= content_tag("div", link_to(thumbnail_img(person), person_path(person)), :class=>'tile') if person.main_photo %>
  <%= link_to(person.full_name, person, {:class => "fn url", :property => "rdfs:label foaf:name vcard:fn", :rel => "foaf:homepage vcard:url"}) + " " + person.dates %>
  <% if @year %>
    <% if person.age_in(@year.year) == 0 %>
      <p class="count">born in <%= @year.year.to_s %></p>
    <% else %>
      <p class="count">aged c.<%= person.age_in(@year.year) %> in <%= @year.year.to_s %></p>
    <% end %>
  <% end %>
</div>