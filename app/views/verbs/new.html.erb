<% content_for(:page_title) {t '.page_title'} %>

<div class="panel clearfix">
  <h1><%= t '.page_heading' %></h1>
  <p><%= t '.explanation' %></p>
  <%= form_for :verb, :url => verbs_path do |f| -%>
    <p><%= f.label :name %><br/><%= f.text_field :name %></p>
    <%= f.submit t('buttons.save'), :class => 'button' %>
  <% end %>
</div>