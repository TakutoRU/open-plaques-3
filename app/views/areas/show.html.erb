<div class="panel clearfix">
  <% if current_user && current_user.is_admin? %>
    <section class="admin_panel">
      <%= link_to t('buttons.edit'), edit_area_path(@area), {:class => :edit, :title => t('buttons.edit')} %>
    </section>
  <% end %>
  <h1><%= @area.name %>, <%= link_to(@area.country.name, @area.country) if @area.country %></h1>
</div>

<div class="panel clearfix">
  <p class="alternate_formats"><%= t 'data_about_thing_as', :thing => @area.name + ", " + @area.country.name %> <%= t '.plaques' %> <%= alternate_link_to "JSON", country_area_path(@area.country, @area, :json), :json  %></p>
</div>