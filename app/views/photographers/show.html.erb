<% content_for :page_title,  "Blue plaque photos by " + @photographer.id %>

<div class="panel">
  <h1><%= pluralize(@photographer.photos.size,"photo") %> taken by <%= link_to("photographer", "/photographers/") %> <%= @photographer.id %></h1>
  <%= render partial: 'photos/tile', :collection => @photographer.photos, as: :photo %>
  <br style="clear: left;"/>
</div>

<p class="alternate_formats">Data about this photographer as <%= alternate_link_to "JSON", photographer_path(@photographer.id, :format => :json), :json %></p>
