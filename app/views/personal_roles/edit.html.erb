<%= render @personal_role.person %>

<%= form_for @personal_role do |f| %>
  <p>was a <%= render @personal_role.role %>
  <% if @personal_role.role.relationship? %>of <%= f.collection_select :related_person_id, @people, :id, :name_and_dates, {:include_blank => true} , { "style" => "width:400px" } %><% end %>
  <br/>
    <%= f.label :started_at, t('.from') %> <%= f.text_field :started_at %>
    <%= f.label :ended_at, t('.to') %> <%= f.text_field :ended_at %>
  </p>

  <p><%= f.label :ordinal, t('.ordinal') %> <%= f.text_field :ordinal %></p>
  <p><%= f.submit t('buttons.save'), :class => :button %></p>
<% end %>