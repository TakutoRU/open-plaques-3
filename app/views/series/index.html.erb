<% content_for(:page_title) {t '.page_title'} %>

<div class="panel clearfix">
  <% if current_user && current_user.is_admin? %>
    <section class="admin_panel">
      <%= link_to(t('buttons.add'), new_series_path, {:class => :new, :title => t('buttons.add')})%>
    </section>
  <% end %>
  <h1><%= t '.page_heading' %></h1>
  <p><%= t '.explanation' %></p>
  <%= render @series %>
</div>

<p class="alternate_formats">%= t 'data_about_things_as' %> <%= alternate_link_to "JSON", series_path(:json), :json %></p>