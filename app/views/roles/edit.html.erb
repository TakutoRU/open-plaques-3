<% content_for(:page_title) {t '.page_title', :role => @role.name } %>

<div class="panel">
  <h1>Editing role <%= link_to @role.name, @role %></h1>
  <% if @role.used_as_a_suffix? %>
    <p>
      <% if @role.military_medal? %>
        A military medal that confers
      <% else %>
        Confers
      <% end %>
      the letters <strong><%= @role.letters %></strong> after the name.
    </p>
  <% end %>
  <%= form_for(@role) do |f| %>
    <p><%= f.label :name %><%= f.text_field :name %></p>
    <p><%= f.label :abbreviation %><%= f.text_field :abbreviation %></p>
    <p><%= f.label :slug %><%= f.text_field :slug %></p>
    <p><%= f.label :wikipedia_stub %><%= f.text_field :wikipedia_stub %></p>
    <p>This is a <%= f.collection_select :role_type, Role.types, :to_s, :to_s, :include_blank => true %> type role</p>
    <p><%= f.submit t('update'), :class => :button %></p>
  <% end %>
</div>